{
  "manifest_version": 2,

  "name": "QBranch SDO Trainer",
  "description": "This extension allows a user to explore the Salesforce SDO and get the best demo click path at a glance",
  "version": "1.0",
  "options_page":"options.html",
  
  "page_action": {
    "default_icon": "img/qbranchLogo.png",
    "default_popup": "sdoInspector.html"
  },
  "background": {
    "scripts": ["js/jquery.min.js","js/background.js"]
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://*.salesforce.com/",
    "tabs",
    "storage",
    "cookies"
  ],
  "content_security_policy": "script-src 'self'; connect-src https://*.salesforce.com; default-src 'self'"
}